<div id="body">
    <p>Sorted by <%= params[ :order ].to_s.capitalize %></p>
    <table>
		<% @albums.each do |album| %>
		<% if album.rank == params[ :rank ].to_i %>
		<tr class="selected">
		<% else %>
		<tr>
		<% end %>
			<td><%= album.rank %></td>
			<td><%= album.title %></td>
			<td><%= album.year %></td>
		</tr>
		<% end %>
    </table>
</div>
